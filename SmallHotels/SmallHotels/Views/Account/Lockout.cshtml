@{
    ViewBag.Title = "Login Failure";
}
<div class="container">
    <div class="row card-only">
        <div class="col-md-10 col-md-offset-1">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="card login-form">
                    <div class="card-content card-login">
                        <h4>Login failed</h4>
                        <div class="login-credentials">
                            <p class="text-danger text-center"><span class="text-danger">Your account has been blocked!</span></p>
                        </div>
                        <p>@Html.ActionLink("Return to Sign in page", "Login", null, new { @class = "btn btn-success btn-login" })</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
