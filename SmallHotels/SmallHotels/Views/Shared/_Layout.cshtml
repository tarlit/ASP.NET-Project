<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top black">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="~/home" class="navbar-brand waves-effect waves-light"><img src="~/App_Themes/logo-transparent.png" alt="Small Hotels" class="img-logo" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { Area = "" }, new { @class = "waves-effect waves-light" })</li>
                    @*<li>@Html.ActionLink("", "", "", new { Area = "" }, new { @class = "waves-effect waves-light" })</li>
                    <li>@Html.ActionLink("", "", "", new { Area = "" }, new { @class = "waves-effect waves-light" })</li>
                    <li>@Html.ActionLink("", "", "", new { Area = "Blog" }, new { @class = "waves-effect  waves-light" })</li>
                    <li>@Html.ActionLink("", "", "", new { Area = "" }, new { @class = "waves-effect waves-light" })</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="body-content" id="main">
        @RenderBody()
    </div>
    <footer class="page-footer footer footer-content text-center black">
        <div class="row">
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <p class="text-white text-center">&copy; @DateTime.Now.Year Small Hotels Guide</p>
            </div>
            <div class="col-md-4">
                <a href="https://www.facebook.com" class="icon-social">
                    <img src="/App_Themes/IconsSocial/1487474216_facebook.png" alt="facebook-icon" />
                </a>
                <a href="https://www.youtube.com" class="icon-social">
                    <img src="/App_Themes/IconsSocial/1487474240_youtube.png" alt="youtube-icon" />
                </a>
                <a href="https://wwww.linkedin.com" class="icon-social">
                    <img src="/App_Themes/IconsSocial/1487474227_linkedin.png" alt="linked-in-icon" />
                </a>
                <a href="https://wwww.plus.google.com" class="icon-social">
                    <img src="/App_Themes/IconsSocial/1487474244_google.png" alt="google-plus-icon" />
                </a>
                <a href="https://www.twitter.com" class="icon-social">
                    <img src="/App_Themes/IconsSocial/1487474262_twitter2.png" alt="twitter-icon" />
                </a>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/materialize")
    @RenderSection("scripts", required: false)
</body>
</html>
