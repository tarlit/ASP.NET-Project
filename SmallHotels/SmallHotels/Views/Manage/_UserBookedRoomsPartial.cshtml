@model SmallHotels.Models.ManageViewModels.IndexViewModel

<div>
    <h4 class="text-center">Requests</h4>
    @if (Model.BookRooms.Count() == 0)
    {
        <h6>No orders submitted yet...</h6>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th class="text-center">Hotel Name</th>
                    <th class="text-center">Room</th>
                    <th class="text-center">Start Date</th>
                    <th class="text-center">Nights Count</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Ordered On:</th>
                </tr>
            </thead>
            @foreach (var item in Model.BookRooms)
            {
                <tr>
                    <td class="text-center">@item.Room.Hotel.Name</td>
                    <td class="text-center"><a href="/.../details/@item.RoomId">Details</a></td>
                    <td class="text-center">@item.StartDate</td>
                    <td class="text-center">@item.NightsCount</td>
                    <td class="text-center">@item.Status</td>
                    <td class="text-center">@item.CreatedOn</td>
                </tr>
            }
        </table>
        @Html.Partial("_PagerPartial", Model)
    }
</div>
